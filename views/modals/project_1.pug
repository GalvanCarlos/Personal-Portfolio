// Portfolio Modal 1
#portfolioModal1.portfolio-modal.modal.fade(tabindex='-1' role='dialog' aria-labelledby='portfolioModal1Label' aria-hidden='true')
  .modal-dialog.modal-xl(role='document')
    .modal-content
      button.close(type='button' data-dismiss='modal' aria-label='Close')
        span(aria-hidden='true')
          i.fas.fa-times
      .modal-body.text-center
        .container
          .row.justify-content-center
            .col-lg-8
              // Portfolio Modal - Title
              h2#portfolioModal1Label.portfolio-modal-title.text-secondary.text-uppercase.mb-0 #{bio.portfolio.project_one.project_title}
              // Icon Divider
              .divider-custom
                .divider-custom-line
                .divider-custom-icon
                  i.fas.fa-star
                .divider-custom-line
              // Portfolio Modal - Image
              img.img-fluid.rounded.mb-5(src='assets/img/portfolio/cabin.png' alt='')
              // Portfolio Modal - Text
              p.mb-5
                | #{bio.portfolio.project_one.project_description}
              button.btn.btn-primary(data-dismiss='modal')
                i.fas.fa-times.fa-fw
                |                                         Close Window